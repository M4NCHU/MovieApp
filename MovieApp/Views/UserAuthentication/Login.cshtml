@model MovieApp.Models.DTO.LoginModel
@{
    Layout = "_Layout";
}
<section class="hero">
<form class="login-form" asp-action="Login" method="post">
    <h2 class="pb-10">Logowanie</h2>
    <div class="input-container">
        <label asp-for="Username" class="form-text">Nazwa użytkownika</label>
        
        <input type="text" class="form-input btn-primary" asp-for="Username" placeholder="Nazwa użytkownika">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Username"></span>
    </div>


    <div class="input-container">
        <label asp-for="Password" class="form-text">Hasło</label>
        <input type="password" class="form-input btn-primary" asp-for="Password" placeholder="Hasło">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Password"></span>
    </div>


    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-primary" type="submit">Zaloguj się</button>
        @*<a class="btn btn-sec" href="#">Add more</a>*@
    </div>
</form>
</section>