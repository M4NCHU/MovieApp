@model MovieApp.Models.Domain.Movie


@{
}
<section class="default-container">
    <div class="container">
        <div class="default-content">
            <form class="view-label" asp-action="Add" method="post" enctype="multipart/form-data">
                
                <div class="view-header">
                    <h2 class="view-h2">Dodaj film</h2>
                    <a class="btn btn-sec" href="/Movie/MovieList">Pokaż wszystkie</a>
                </div>
                <div class="input-container">
                    <label asp-for="Title" class="view-label">Tytuł filmu</label>
                    <input type="text" class="form-input btn-primary" asp-for="Title">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Title"> </span>
                </div>

                <div class="input-container">
                    <label asp-for="Director" class="view-label">Zdjęcie</label>
                    <input type="file" asp-for="ImageFile">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="ImageFile"> </span>
                </div>

                <div class="input-container">
                    <label asp-for="Genres" class="view-label">Gatunki filmowe</label>
                    <select asp-items="Model.GenreList" class="form-input btn-primary" asp-for="Genres" multiple>
                        <option value="">--select--</option>
                    </select>
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Genres"> </span>
                </div>

                <div class="input-container">
                    <label asp-for="ReleaseYear" class="view-label">Data produkcji</label>
                    <input type="text" class="form-input btn-primary" asp-for="ReleaseYear">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="ReleaseYear"> </span>
                </div>

                <div class="input-container">
                    <label asp-for="Cast" class="view-label">Obsada</label>
                    <input type="text" class="form-input btn-primary" asp-for="Cast">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Cast"> </span>
                </div>

                <div class="input-container">
                    <label asp-for="Director" class="view-label">Reżyser</label>
                    <input type="text" class="form-input btn-primary" asp-for="Director">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Director"> </span>
                </div>

                <div class="input-container">
                    <label asp-for="Desc" class="view-label">Opis</label>
                    <input type="text" class="form-input btn-primary" asp-for="Desc">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Desc"> </span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="alert mb-1">
                        @TempData["msg"]
                    </div>
                }

                <div class="input-container">
                    <button class="btn btn-default" type="submit">Dodaj</button>
                    
                </div>
            </form>
           </div>
    </div class="container">
</section>
