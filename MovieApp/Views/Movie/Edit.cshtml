@model MovieApp.Models.Domain.Movie

@{
}
<section class="default-container">
    <div class="container">
        <div class="default-content">
            <form class="w-40" asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="view-header">
                    <h2 class="view-h2">Edytuj film</h2>
                    <a class="btn btn-sec" href="/Movie/MovieList">Pokaż wszystkie</a>
                </div>
                <input type="hidden" class="form-input btn-primary" asp-for="Id">
                <input type="hidden" class="form-input btn-primary" asp-for="MovieImage">

                <div class="input-container">
                    <label asp-for="Title" class="w-40">Tytuł</label>
                    <input type="text" class="form-input btn-primary" asp-for="Title">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Title"> </span>
                </div>

                <div class="input-container">
                    <label asp-for="Director" class="w-40">Zdjęcie</label>
                    <input type="file" asp-for="ImageFile">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="ImageFile"> </span>
                </div>

                <div class="input-container">
                    <label asp-for="Genres" class="w-40">Gatunki filmowe</label>
                    <select asp-items="Model.MultiGenreList" class="form-input btn-primary" asp-for="Genres" multiple>
                        <option value="">--select--</option>
                    </select>
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Genres"> </span>
                </div>

                <div class="input-container">
                    <label asp-for="ReleaseYear" class="w-40">Data produkcji</label>
                    <input type="text" class="form-input btn-primary" asp-for="ReleaseYear">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="ReleaseYear"> </span>
                </div>

                <div class="input-container">
                    <label asp-for="Cast" class="w-40">Obsada</label>
                    <input type="text" class="form-input btn-primary" asp-for="Cast">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Cast"> </span>
                </div>

                <div class="input-container">
                    <label asp-for="Director" class="w-40">Reżyser</label>
                    <input type="text" class="form-input btn-primary" asp-for="Director">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Director"> </span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="alert mb-1">
                        @TempData["msg"]
                    </div>
                }

                <div class="input-container">
                    <button class="btn btn-default" type="submit">Zapisz</button>
                    
                </div>
            </form>
            </div>
    </div class="container">
</section>
